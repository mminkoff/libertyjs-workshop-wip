<form class="image">
  <div class="fieldset">
    <label for="url">Url</label>
    {{input name="url" value=model.url}}
  </div>
</form>

<button {{action 'openPicker'}}>open picker</button>
{{#if picker}}
  {{ember-filepicker pickerOptions=pickerOptions onSelection='fileSelected' onClose='onClose' onError='onError'}}
{{/if}}
<button {{action 'saveImage'}}>save</button>
