{{#if model.url}}
  {{my-image image=model tagName="li"}}
{{/if}}

<form class="image form-horizontal">
  <fieldset>
    <div class="form-group">
      <label for="url">Url</label>
      {{input name="url" class="form-control" value=model.url}}
    </div>
    <div class="form-group">
      <label for="caption">Caption</label>
      {{input name="caption" class="form-control" value=model.caption}}
    </div>
  </fieldset>
</form>

<button type="reset" class="btn btn-default" {{action 'cancel'}}>cancel</button>
<button class="btn btn-info" {{action 'openPicker'}}>open picker</button>
<button type="submit" class="btn btn-primary" {{action 'saveImage'}}>
  {{fa-icon "thumbs-up"}}
  save
</button>
{{#if picker}}
  {{ember-filepicker pickerOptions=pickerOptions onSelection='fileSelected' onClose='onClose' onError='onError'}}
{{/if}}
